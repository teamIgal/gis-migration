{
    "$id": "https://github.com/teamIgal/gis-migration/layer.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/layer",
    "definitions": {
        "field": {
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "alias": { "type": "string" },
                "populationCount": { "type": "number", "default": 0 },

                "allowNullValues": { "type": "boolean", "default": true },
                "defaultValue": {},         
                "fieldType": {
                    "type": "string",
                    "enum": ["shortInteger", "longInterger", "float", "double", "text", "date"]
                },

                "domain": { "type": "string" },
                "length": { "type": "number", "minimum": 0, "default": 50 }
            },
            "required": ["name", "fieldType", "populationCount"],
            "additionalProperties": false
        },

        "tolerance": {
            "type": "object",
            "properties": {
                "xy": { "type": "number" },
                "z": { "type": "number" },
                "m": { "type": "number" }
            },
            "required": ["xy"],
            "additionalProperties": false
        },

        "extent": {
            "type": "object",
            "properties": {
                "minX": { "type": "number" },
                "maxX": { "type": "number" },
                "minY": { "type": "number" },
                "maxY": { "type": "number" },
                "minZ": { "type": "number" },
                "maxZ": { "type": "number" },
                "minM": { "type": "number" },
                "maxM": { "type": "number" }
            },
            "required": ["minX", "maxX", "minY", "maxY"],
            "additionalProperties": false
        },

        "subtypes": {
            "type": "object",
            "properties": {
                "subtypeField": { "type": "string" },
                "defaultSubtype": { "type": "string" },
                "_subtypes": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "code": { "type": "number" },
                            "description": { "type": "string" }
                        },
                        "required": ["code", "description"],
                        "additionalProperties": false
                    }
                },
                "subtypeFieldMappings": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "fieldName": { "type": "string" },
                            "defaultValue": {},
                            "domain": { "type": "string" }
                        },
                        "required": ["fieldName", "domain"],
                        "additionalProperties": false
                    }
                }
            }   
        },

        "index": {
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "unique": { "type": "boolean", "default": false },
                "ascending": { "type": "boolean", "default": false },
                "fields": {
                    "type": "array",
                    "items": { "type": "string" },
                    "minItems": 1
                }
            },
            "required": ["name", "fields"],
            "additionalProperties": false
        },

        "relation": {
            "type": "object",
            "properties": {
                "relatedTo": { "type": "string" },
                "role": {
                    "type": "string",
                    "enum": ["origin", "destination"]
                },
                "type": {
                    "type": "string",
                    "enum": ["simple", "composite"]
                },
                "cardinality": {
                    "type": "string",
                    "enum": ["oneToOne", "oneToMany", "manyToMany"]
                },
                "notification": {
                    "type": "string",
                    "enum": ["none", "forward", "backward", "both"]
                },
                "originPrimaryKey": { "type": "string" },
                "destinationPrimaryKey": { "type": "string" },
                "forwardPathLabel": { "type": "string" },
                "backwardPathLabel": { "type": "string" }
            },
            "required": ["relatedTo", "role", "type", "cardinality", "notification", "originPrimaryKey", "destinationPrimaryKey", "forwardPathLabel", "backwardPathLabel"],
            "additionalProperties": false
        },

        "layer": {
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "alias": { "type": "string" },
                "arena": { "type": "string" },

                "featureType": {
                    "type": "string",
                    "enum": ["simple", "composite"]
                },
                "geometryType": {
                    "type": "string",
                    "enum": ["polygon", "line", "point", "multipoint", "multipatch", "dimension", "annotation"]
                },

                "hasZ": { "type": "boolean", "default": "false" },
                "hasM": { "type": "boolean", "default": "false"  },
                
                "featureExtent": { "$ref": "#/definitions/extent" },
                
                "csWKID": { "type": "number" },
                "tolerance": { "$ref": "#/definitions/tolerance" },
                "resolution": { "$ref": "#/definitions/tolerance" },
                
                "fields": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/field" }
                },

                "indecies": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/index" },
                    "minItems": 1
                },

                "subtypes": { "$ref": "#/definitions/subtypes" },

                "relations": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/relation" }
                }
            },
            "required": ["name", "alias", "arena", "csWKID", "featureExtent", "geometryType", "fields"],
            "additionalProperties": false
        }
    }
}