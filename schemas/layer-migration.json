{
    "$id": "https://github.com/teamIgal/gis-migration/layer.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/layer-migration",
    "definitions": {
        "tailTable": {
            "type": "object",
            "properties": {
                "name": {"type": "string"}
            }
        },
        "layer-migration": {
            "allOf": [
                {"$ref": "layer.schema.json#/definitions/layer"},
                {
                    "properties": {
                        "sourceName": {"type": "string"},
                        "tailTables": {
                            "type": "array",
                            "items": {"$ref": "#/definitions/tailTable"}
                        },
                        "fields": {
                            "properties": {
                                "sourceName": {"type": "string"}
                            }
                        },
                        "indecies": {
                            "properties": {
                                "sourceName": {"type": "string"}
                            }
                        }
                    },
                    "required": ["sourceName"]
                }
            ]
        }
    }
}